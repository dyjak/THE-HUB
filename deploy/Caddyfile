{
  # No public CA needed (we'll typically access over Tailscale).
  # Keep it simple: HTTP only by default.
  auto_https off
}

:80 {
  encode gzip

  # Next.js API routes (NextAuth) must be handled by the frontend.
  handle /api/auth/* {
    reverse_proxy frontend:3000
  }

  # Backend (FastAPI) API + static mounts
  handle /api/air/* {
    reverse_proxy backend:8000
  }
  handle /api/login* {
    reverse_proxy backend:8000
  }
  handle /api/register* {
    reverse_proxy backend:8000
  }
  handle /api/users* {
    reverse_proxy backend:8000
  }
  handle /api/local-samples/* {
    reverse_proxy backend:8000
  }
  handle /api/audio/* {
    reverse_proxy backend:8000
  }
  handle /api/param-generation/output/* {
    reverse_proxy backend:8000
  }
  handle /api/midi-generation/output/* {
    reverse_proxy backend:8000
  }
  handle /api/health {
    reverse_proxy backend:8000
  }
  handle /health {
    reverse_proxy backend:8000
  }

  # Any other /api/* routes belong to Next.js
  handle /api/* {
    reverse_proxy frontend:3000
  }

  # Frontend (Next.js)
  handle {
    reverse_proxy frontend:3000
  }
}
